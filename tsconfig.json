{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"],
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
